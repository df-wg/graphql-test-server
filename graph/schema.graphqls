# GraphQL schema example

type User {
  id: ID!
  email: String!
  first_name: String!
  last_name: String!
  full_name: String!
}

input UserInput {
  email: String!
  first_name: String!
  last_name: String!
}

type Query {
  users(first_name: String, orderByEmail: Boolean): [User!]!
}

type Mutation {
  createUser(input: UserInput!): User!
  deleteUser(id: ID!): Boolean!
}
